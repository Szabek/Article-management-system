{% extends 'base.html.twig' %}

{% block title %}All Articles{% endblock %}

{% block content %}
    <div class="articles-container">
        <h1>All Articles</h1>
        <ul>
            {% for article in articles %}
                <li>
                    <a href="/articles/{{ article.id }}">{{ article.title }}</a>
                    <p>{{ article.description }}</p>
                </li>
            {% else %}
                <li>No articles available.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}